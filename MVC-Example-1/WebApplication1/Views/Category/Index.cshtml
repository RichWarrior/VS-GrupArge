@model WebApplication1.ViewModel.DropDownListViewModel
@{
	ViewBag.Title = "Index";

}

<h2>Index</h2>
<div class="row">
	@Html.DropDownListFor(m => m.id, Model.categoryList, new { @class = "col-md-2", style = "margin:10px;" , @id="cityDropDownList"})
	<select id="countryDropDown" class="col-md-2" style="margin:10px;"></select>
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js" type="text/javascript"></script>
	<script type="text/javascript">
		$(document).ready(function () {
			$('#cityDropDownList').change(function () {
				var value = $("#cityDropDownList option:selected").val();
					$.ajax({
						type: "GET",
						url: "/Category/getSubCategory/" + value,
						contentType: "application/json; charset=utf-8",
						dataType: "json",
						success: function (msg) {
							$.each(msg, function (i, v) {
								$("#countryDropDown").append("<option value="+i+">"+v+"</option>");
							});
						}
							//$("#countryDropDown").append("<option value="+0+">"+msg+"</option>");
					})
					return false;
				});
			});
	</script>
	@*@Html.DropDownListFor(m => m.sub_id, Model.subCategoryList, new { @class = "col-md-2" })*@
</div>
<input id="myButton" type="button" value="Seç" />



